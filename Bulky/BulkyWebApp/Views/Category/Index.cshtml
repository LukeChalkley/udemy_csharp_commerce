@model List<Category>

<partial name="_Notifications" />

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>

        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-area="" asp-controller="Category" asp-action="Add">
                Add Category
            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped">
        <tr>
            <th>Category</th>
            <th>Display Order</th>
            <th>Actions</th>
        </tr>

        @foreach (var category in Model.OrderBy(u => u.DisplayOrder))
        {
            <tr>
                <td>@category.Name</td>
                <td>@category.DisplayOrder</td>
                <td>
                    <div class="w-25 btn-group" role="group">
                        <a asp-controller="Category" asp-action="Edit" asp-route-ID="@category.Id" class="btn btn-primary mx-1">
                            <i class="bi bi-pencil"></i>
                        </a>

                        <a asp-controller="Category" asp-action="Delete" asp-route-ID="@category.Id" class="btn btn-primary mx-1">
                            <i class="bi bi-trash-fill"></i>
                        </a>
                    </div>
                </td>
            </tr>
        }
    </table>
</div>